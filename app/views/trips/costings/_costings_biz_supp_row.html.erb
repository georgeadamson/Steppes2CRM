<%
	elem ||= trip_element
-%>

<!-- Biz-supp row applies to flights only: -->
<tr>
	<%= tag :td, '&nbsp; Business class supplement' %>
	<%= tag :td, tag( :small, "#{ elem.biz_supp_margin }#{ elem.biz_supp_margin_type }" ) %>
	<%= tag :td, tag( :small, elem.exchange_rate ) %>
	<%= tag :td, elem.calc( :daily, :local,   :net,   :per, :adult,  :biz_supp => true ) %>
	<%= tag :td, elem.calc( :daily, :actual,  :net,   :per, :adult,  :biz_supp => true ) %>
	<%= tag :td, elem.calc( :daily, :actual,  :gross, :per, :adult,  :biz_supp => true ) %>
	<%= tag :td, elem.calc( :daily, :actual,  :net,   :per, :child,  :biz_supp => true ) %>
	<%= tag :td, elem.calc( :daily, :actual,  :gross, :per, :child,  :biz_supp => true ) %>
	<%= tag :td, elem.calc( :daily, :actual,  :net,   :per, :infant, :biz_supp => true ) %>
	<%= tag :td, elem.calc( :daily, :actual,  :gross, :per, :infant, :biz_supp => true ) %>
</tr>