<%

	# (The controller's index action will have already filterd by params[:kind_id] if it was specified)
	
	# Custom URL parameter options:
	country_id	||= params[:country_id].split(',') if params[:country_id]	# Filter by comma-separated IDs.

	# Prepare records and apply filters and options:
	suppliers				||= Supplier.all
	suppliers					= suppliers.all( :country_id => country_id ) if country_id
	
	return partial( 'shared/list', :collection => suppliers )

-%>