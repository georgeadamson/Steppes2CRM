<%

	@web_requests ||= web_requests

	# Lits of client's WebRequests on the Client summary page:
%>
<ul>
<% @web_requests.each do |web_request| %>

	<%= tag :li, "#{ icon :pencil } #{ link_to web_request.name, resource(web_request) } #{ tag :small, web_request.requested_date.formatted(:uidisplay) }" %>
		
<% end %>
</ul>