<%
	client ||= @client
	passport_issue_date	  = client.passport_issue_date.blank?  ? '' : client.passport_issue_date.formatted(:uidate)
	passport_expiry_date	= client.passport_expiry_date.blank? ? '' : client.passport_expiry_date.formatted(:uidate)
-%>
<%= text_field :passport_name, :label=>"Name on passport" %>
<%= text_field :passport_number, :label=>"Passport number" %>
<%= text_field :passport_issue_place, :label=>"Place of issue" %>
<%= text_field :passport_issue_date,  :value => passport_issue_date,  :label=>"Date of issue", :class=>"date" %> 
<%= text_field :passport_expiry_date, :value => passport_expiry_date, :label=>"Expiry date",   :class=>"date" %>