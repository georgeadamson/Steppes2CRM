<div id="monthly-conversions-by-trip-results">
<%

	filters = {}
	filters[:month_offset] = params[:month_offset] || 0  # 0 = This month, -1 = Last month
	filters[:week_offset]  = params[:week_offset]  || 0

	# Refresh from database if cached data looks stale:
	unless !params[:force] &&
		$cached[:monthly_conversions_by_trip] &&
		$cached[:monthly_conversions_by_trip][filters.to_s] &&
		$cached[:monthly_conversions_by_trip][filters.to_s][:expiry] &&
		$cached[:monthly_conversions_by_trip][filters.to_s][:expiry] > Time.now
		
		# Prepare custom sql statement:
sql_statement = "EXEC usp_dashboard_monthly_conversions_by_trip ?"									
conversions = repository(:default).adapter.select( sql_statement, filters[:month_offset].to_i )

$cached[:monthly_conversions_by_trip]                      ||= {}
$cached[:monthly_conversions_by_trip][filters.to_s]        ||= {}
$cached[:monthly_conversions_by_trip][filters.to_s][:data]   = conversions
$cached[:monthly_conversions_by_trip][filters.to_s][:expiry] = 10.minutes.since Time.now

end

conversions = $cached[:monthly_conversions_by_trip][filters.to_s][:data]
expiry   = $cached[:monthly_conversions_by_trip][filters.to_s][:expiry]

%>

<br/>

<form action="/dashboards/monthly_conversions_by_trip" method="get" data-target="#monthly-conversions-by-trip-results">
<p style="text-align:right">

<%=
	# See the stored procedure for info about the offset param. (A value of 1 causes month offset to be ignored)
	orig_select :month_offset, :label=>"By trips created ", :selected => filters[:month_offset].to_s, :collection => [ [0,'This month'], [-1,'Last month'], ['1:','This year'] ], :name => 'month_offset', :class => 'auto-submit'
%>
<input type="submit" value="Refresh" class="ui-priority-secondary ui-state-default"/>
	
	<small>
	(Refresh available at <%= expiry.formatted(:uidatetime) %> - May take a minute!) &nbsp;
	</small>

	<%= partial 'dashboards/clipboard_link', :clipboard_source => '#monthly-conversions-by-trip-results-table' if conversions.first %>
	<br/>
	
		</p>
	</form>
	
	<!--
	<%= filters.inspect %>
	<%= Time.now %>
-->

<% if conversions.first %>

	<% headings = conversions.first.members -%>

	<table id="monthly-conversions-by-trip-results-table" style="font-size:0.9em">

		<thead>
			<tr>
				<% headings.each do |heading| %>
					<%= tag :th, heading.capitalize %>
				<% end %>
			</tr>
		</thead>
		
		<tbody>
			<%
			conversions.each do |booking|
			%>
				<tr>
					<% booking.each_with_index do |field,i| %>
						<% is_currency_field = field.respond_to?(:to_currency) && ( headings[i] =~ /(cost|price|amount|profit)$/ ) %>
						<%= tag :td, is_currency_field ? field.to_currency(:US,:unit => "&pound;") : field %>
					<% end %>
				</tr>
			<%
			end
			%>
		</tbody>

	</table>

<% else %>

	<p>There are no conversions to report</p>

<% end %>

</div>